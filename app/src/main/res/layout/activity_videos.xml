<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.mail.guessmovie.Videos"
    android:background="@drawable/background2">
    <VideoView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:id="@+id/videoView"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:text="Prosto"
        android:id="@+id/a"
        android:layout_width="175dp"
        android:layout_height="85dp"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:gravity="left|center_vertical"
        android:textStyle="bold"
        android:layout_alignTop="@+id/b"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="Prosto2"
        android:id="@+id/b"
        android:layout_width="175dp"
        android:layout_height="85dp"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:gravity="right|center_vertical"
        android:textStyle="bold"
        android:layout_above="@+id/d"
        android:layout_toRightOf="@+id/editText"
        android:layout_toEndOf="@+id/editText" />


        <TextView
            android:text="Prosto3"
            android:id="@+id/c"
            android:layout_width="175dp"
            android:layout_height="85dp"
            android:textSize="18dp"

            android:textColor="#FFFFFF"
            android:gravity="left|center_vertical"
            android:textStyle="bold"
            android:layout_above="@+id/editText"
            android:layout_toLeftOf="@+id/editText"
            android:layout_toStartOf="@+id/editText" />
        <TextView
            android:text="Prosto4"
            android:id="@+id/d"
            android:layout_width="175dp"
            android:layout_height="85dp"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:gravity="right|center_vertical"
            android:textStyle="bold"
            android:layout_alignTop="@+id/c"
            android:layout_alignLeft="@+id/b"
            android:layout_alignStart="@+id/b" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/clock"
        android:background="@drawable/clock"
        android:layout_above="@+id/a"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#00FF00"
        android:textSize="20dp"
        android:id="@+id/ball"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
